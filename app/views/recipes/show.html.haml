.row
	.col-md-4#pic
		.panel.panel-default
			.panel-body= image_tag "bruschetta"

	.col-md-8
		.panel.panel-default
			.panel-heading
				.panel-title= @recipe.title
			.panel-body
				%p= @recipe.description
		= link_to "Delete", recipe_path(@recipe), method: :delete, class: 'btn btn-danger pull-right', data: { confirm: "Are you sure?" }
		= link_to "Edit", edit_recipe_path(@recipe), class: 'btn btn-info pull-right'
%br/
%br/
.row
	.col-md-6
		.panel.panel-default
			.panel-heading Ingredients
			.panel-body
				.col-xs-12#reset-form
					#ingredients
						- @recipe.ingredients.each do |i|
							%p
								\-
								= i.name
								= link_to "Remove", url_for(controller: 'ingredients', action: 'destroy', id: i.id), method: :delete, class: 'pull-right'
					= form_tag url_for(controller: 'ingredients', action: 'create', id: @recipe.id), remote: true do
						.col-md-8
							= text_field_tag :name, nil, class: 'form-control'
						= submit_tag 'Add ingredient', class: 'btn btn-primary pull-right'

	.col-md-6
		.panel.panel-default
			.panel-heading Directions
			.panel-body
				%p SKDASDKAKSD
